<Window x:Class="CombCell.CombCellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:CombCell"
    Title="CombCellWindow" Height="285" Width="405">
    <Window.Resources>
        <cc:HexArranger x:Key="Arranger"/>
    </Window.Resources>
    
    <Grid>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <cc:CombView Arranger="{StaticResource Arranger}"/>
    </Grid>
</Window>
